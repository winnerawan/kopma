<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/productsLayout"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">
        <LinearLayout
            android:id="@+id/liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Garlic Butter Prawns"
                android:textColor="@color/colorwhite"
                android:textStyle="bold"
                android:textSize="15dp"/>
            <id.ac.dharma_iswara.koperasimahasiswa.helper.MyTextView
                android:id="@+id/price"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs 100"
                android:textColor="@color/colorwhite"
                android:textSize="15dp"
                android:gravity="right"/>

        </LinearLayout>

        <RatingBar

            android:id="@+id/ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="4"
            android:layout_marginTop="5dp"
            style="?android:attr/ratingBarStyleSmall"
            android:backgroundTint="@color/ratingbar"
            android:secondaryProgressTint="@color/ratingbar"
            android:progressTint="@color/ratingbar"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp">
            <ImageView
                android:id="@+id/timeimage"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/clock"
                android:layout_gravity="center"
                />

            <id.ac.dharma_iswara.koperasimahasiswa.helper.MyTextView
                android:id="@+id/timetext"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 min away"
                android:textColor="@color/colorwhite"
                android:textSize="13dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>