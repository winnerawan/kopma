<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.ac.dharma_iswara.koperasimahasiswa.activity.MainActivity">

    <include layout="@layout/toolbar"></include>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/re_list_pro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_line">


    <ImageView
        android:id="@+id/backNav"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="vertical"
        android:paddingLeft="40dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:background="@color/colorwhite">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_header1_height"
            android:background="@color/colorwhite"
            android:orientation="vertical"
            android:gravity="bottom"
            android:paddingBottom="35dp"
            >

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vinder"
                android:textSize="30dp"
                android:paddingLeft="16dp"
                android:paddingTop="20dp"
                android:textColor="@color/colortext"
                android:letterSpacing="0.025"/>



            <View
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:paddingTop="30dp"
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:background="@color/colortext"></View>

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:text="SIGN IN"
                android:textColor="@color/colortext"
                android:letterSpacing="0.025"/>



        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colortext"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:letterSpacing="0.025"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/nav_cart"
                android:textColor="@color/colortext"
                android:letterSpacing="0.025"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/cart_size"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textSize="12dp"
                    android:padding="2dp"
                    android:text="0"
                    android:gravity="center"
                    android:background="@drawable/side_nav_bar"
                    android:textColor="@color/colortext" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/nav_pro"
            android:textColor="@color/colortext"
            android:letterSpacing="0.025"/>

        <TextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/nav_cat"
            android:textColor="@color/colortext"
            android:letterSpacing="0.025"/>

        <TextView
            android:id="@+id/fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/nav_fav"
            android:textColor="@color/colortext"
            android:letterSpacing="0.025"/>

        <TextView
            android:id="@+id/akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/nav_acc"
            android:textColor="@color/colortext"
            android:letterSpacing="0.025"/>

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="LOGOUT"
            android:textColor="@color/colortext"
            android:letterSpacing="0.025"/>

    </LinearLayout>
</LinearLayout>
    </FrameLayout>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>