<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dharma" >




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >




            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView

                    android:id="@+id/back"
                    android:layout_width="21dp"
                    android:layout_height="25dp"
                    android:src="@drawable/back"
                    android:layout_margin="16dp"
                    />


                <id.ac.dharma_iswara.koperasimahasiswa.helper.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in"
                    android:textSize="22dp"
                    android:textColor="#fff"
                    android:layout_marginLeft="16dp"
                    android:layout_margin="16dp"

                    />




            </LinearLayout>


            <LinearLayout
                android:background="@drawable/signin"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <id.ac.dharma_iswara.koperasimahasiswa.helper.MyEditText
                    android:textSize="16dp"
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:textColorHint="@color/signintext"
                    android:textColor="@color/signintext"
                    android:layout_marginLeft="60dp"
                    android:inputType="text"
                    android:background="#0000"
                    android:padding="16dp"
                    android:maxLength="20"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="35dp"
                    android:layout_marginRight="65dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_height="1dp"
                    android:background="@color/signintext" />



                <id.ac.dharma_iswara.koperasimahasiswa.helper.MyEditText
                    android:textSize="16dp"
                    android:id="@+id/password"
                    android:drawablePadding="38dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:textColorHint="@color/signintext"
                    android:textColor="@color/signintext"
                    android:layout_marginLeft="60dp"
                    android:inputType="textPassword"
                    android:background="#0000"
                    android:padding="16dp"
                    android:drawableLeft="@drawable/password"
                    android:layout_marginRight="60dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_height="1dp"
                    android:background="@color/signintext"
                    android:layout_marginBottom="63dp"
                    />


            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="120dp"
            android:background="@color/signintext"
            android:layout_gravity="bottom"
            android:layout_marginBottom="105dp"
            android:layout_marginLeft="110dp"
            />

    </FrameLayout>

    <id.ac.dharma_iswara.koperasimahasiswa.helper.MyTextView
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect"
        android:text="Sign in"
        android:textSize="20dp"
        android:textColor="#3b4a45"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="13dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"

        />







</RelativeLayout>
